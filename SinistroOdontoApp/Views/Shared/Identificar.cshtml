@model SinistroOdontoApp.ViewModels.IdentificarSintomasViewModel

@{
    ViewData["Title"] = "Identificar Sintomas";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Identificar" method="post">
    <div class="form-group">
        <label for="Sintomas">Sintomas:</label>
        <input asp-for="Sintomas" class="form-control" />
        <span asp-validation-for="Sintomas" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Identificar</button>
</form>

@if (Model.Resposta != null)
{
    <h3>Resultado</h3>
    <p><strong>Doença:</strong> @Model.Resposta.Doenca</p>
    <p><strong>Gravidade:</strong> @Model.Resposta.Gravidade</p>
    <p><strong>Recomendação:</strong> @Model.Resposta.Recomendacao</p>
}
